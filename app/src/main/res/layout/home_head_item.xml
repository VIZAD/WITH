<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="6dp"-->
        <!--android:background="#33000000" />-->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <!--第二行-->
        <TableRow>


            <LinearLayout
                android:id="@+id/ll_sport"
                android:layout_width="360dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:tag="运动"
                android:background="@drawable/home_type_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimary"
                    android:text="运动" />

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginBottom="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/home_sports" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    /*三个小活动*/

                    <ImageView
                        android:id="@+id/iv_sport1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:src="@drawable/basketball"
                        android:tag="篮球" />

                    <ImageView
                        android:id="@+id/iv_sport2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:src="@drawable/soccer"
                        android:tag="足球" />

                    <ImageView
                        android:id="@+id/iv_sport3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:src="@drawable/yumaoqiu"
                        android:tag="羽毛球" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_study"
                android:layout_width="360dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:tag="学习"
                android:background="@drawable/home_type_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimary"
                    android:text="学习" />

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="25dp"
                    android:src="@drawable/home_study" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    /*三个小活动*/

                    <ImageView
                        android:id="@+id/iv_study1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:src="@drawable/english"
                        android:tag="自习"/>

                    <ImageView
                        android:id="@+id/iv_study2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:src="@drawable/library"
                        android:tag="考研"/>

                    <ImageView
                        android:id="@+id/iv_study3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:src="@drawable/read"
                        android:tag="晨读"/>
                </LinearLayout>


            </LinearLayout>
        </TableRow>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#33000000" />-->
        <!--第二行-->
        <TableRow>

            <LinearLayout
                android:id="@+id/ll_board_game"
                android:layout_width="360dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:tag="桌游"
                android:background="@drawable/home_type_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimary"
                    android:text="桌游" />

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="25dp"
                    android:src="@drawable/home_board_games" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    /*三个小活动*/

                    <ImageView
                        android:tag="狼人杀"
                        android:id="@+id/iv_board_game1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:src="@drawable/langren" />

                    <ImageView
                        android:tag="UNO"
                        android:id="@+id/iv_board_game2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:src="@drawable/uno" />

                    <ImageView
                        android:tag="三国杀"
                        android:id="@+id/iv_board_game3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:src="@drawable/sanguo" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_online_game"
                android:layout_width="360dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:tag="网游"
                android:background="@drawable/home_type_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimary"
                    android:text="网游" />

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="25dp"
                    android:src="@drawable/hone_games" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    /*三个小活动*/

                    <ImageView
                        android:tag="英雄联盟"
                        android:id="@+id/iv_online_game1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:src="@drawable/lol" />

                    <ImageView
                        android:tag="Dota2"
                        android:id="@+id/iv_online_game2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:src="@drawable/dota2" />

                    <ImageView
                        android:tag="守望先锋"
                        android:id="@+id/iv_online_game3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:src="@drawable/overwatch" />
                </LinearLayout>


            </LinearLayout>
        </TableRow>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#33000000" />-->
        <!--第三行-->
        <TableRow>

            <LinearLayout
                android:id="@+id/ll_date"
                android:layout_width="360dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:tag="聚会"
                android:background="@drawable/home_type_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimary"
                    android:text="聚会" />

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="25dp"
                    android:src="@drawable/home_appointmant" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    /*三个小活动*/

                    <ImageView
                        android:tag="电影"
                        android:id="@+id/iv_date1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:src="@drawable/movie" />

                    <ImageView
                        android:tag="吃饭"
                        android:id="@+id/iv_date2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:src="@drawable/eatting" />

                    <ImageView
                        android:tag="唱K"
                        android:id="@+id/iv_date3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:src="@drawable/ktv" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_other"
                android:layout_width="360dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:tag="其他"
                android:background="@drawable/home_type_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimary"
                    android:text="其他"
                    android:id="@+id/textView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:orientation="horizontal"

                        >
                        /*三个小活动*/

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:src="@drawable/repair" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:src="@drawable/photographic" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:src="@drawable/link" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"

                        android:orientation="horizontal">
                        /*三个小活动*/

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:src="@drawable/plane" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:src="@drawable/social_circle" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:src="@drawable/plane" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"

                        android:orientation="horizontal">
                        /*三个小活动*/

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:src="@drawable/doge" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:src="@drawable/dayin" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:src="@drawable/exclamatory" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </TableRow>

    </TableLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/gainsboro"/>
</LinearLayout>
