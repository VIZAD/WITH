<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/usernum_edtTxt"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/name_ic"
            android:drawablePadding="10dp"
            android:hint="手机号码"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="20sp" />

        <include
            layout="@layout/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignLeft="@+id/usernum_edtTxt"
            android:layout_alignRight="@+id/usernum_edtTxt"
            android:layout_below="@+id/usernum_edtTxt" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/psw_edtTxt"
            android:layout_width="250dp"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/password"
            android:hint="密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="20sp" />

        <include
            layout="@layout/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignLeft="@+id/psw_edtTxt"
            android:layout_alignRight="@+id/psw_edtTxt"
            android:layout_below="@+id/psw_edtTxt" />
    </RelativeLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="#11cd6e"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/for_txtVi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:text="忘记密码"
        android:textColor="#11cd6e"
        android:textSize="20sp" />
</LinearLayout>
