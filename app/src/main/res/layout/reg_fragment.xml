<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reg_lLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/reg_usernum_edtTxt"
            android:layout_width="165dp"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawablePadding="10dp"
            android:layout_alignBottom="@+id/reg_verify_btn"
            android:drawableLeft="@drawable/num_ic"
            android:hint="手机号码"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="20sp" />

        <Button
            android:id="@+id/reg_verify_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#11cd6e"
            android:layout_toRightOf="@+id/reg_usernum_edtTxt"
            android:text="验证码"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    <include
        layout="@layout/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/reg_usernum_edtTxt"
        android:layout_alignLeft="@+id/usernum_edtTxt"
        android:layout_alignRight="@+id/reg_verify_btn"
        />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <EditText
        android:id="@+id/reg_verifynum_edtTxt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/comfrim_num"
        android:hint="验证码"
        android:inputType="number"
        android:layout_marginBottom="2dp"
        android:drawablePadding="10dp"
        android:background="@null"
        android:singleLine="true"
        android:textSize="20sp" />
        <include
            layout="@layout/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/reg_verifynum_edtTxt"
            android:layout_alignLeft="@+id/reg_verifynum_edtTxt"
            android:layout_alignRight="@+id/reg_verifynum_edtTxt"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/psw_reg_edtTxt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/password"
        android:hint="密码"
        android:inputType="textPassword"
        android:layout_marginBottom="2dp"
        android:drawablePadding="10dp"
        android:background="@null"
        android:singleLine="true"
        android:textSize="20sp" />
    <include
        layout="@layout/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/psw_reg_edtTxt"
        android:layout_alignLeft="@+id/psw_reg_edtTxt"
        android:layout_alignRight="@+id/psw_reg_edtTxt"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/reg_conpsw_edtTxt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/comfrim_num"
        android:hint="确认密码"
        android:drawablePadding="10dp"
        android:background="@null"
        android:inputType="textPassword"
        android:layout_marginBottom="2dp"
        android:singleLine="true"
        android:textSize="20sp" />
        <include
            layout="@layout/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/reg_conpsw_edtTxt"
            android:layout_alignLeft="@+id/reg_conpsw_edtTxt"
            android:layout_alignRight="@+id/reg_conpsw_edtTxt"
            />
    </RelativeLayout>

    <TextView
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str03" />

    <Button
        android:id="@+id/reg_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="#11cd6e"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="20sp" />
</LinearLayout>
